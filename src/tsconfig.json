{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "sourceMap": true,
        // "rootDir": "./",                         
        "removeComments": true,
        "strict": true,                           
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "./../"
    },
    "files" : [
        "./backend.ts",
        "./../config.ts"
    ],
    "include": [ 
        "./types", 
        "./types/",
        "./includes/",
        "./../config.ts"
    ],
    "exclude": [
        "./static/",
        "./static/"
    ]
}